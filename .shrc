function backlight() {
  n="$1"
  if [ "$n" = 'max' ]; then
    n=4882
  elif [ "$n" = 'half' ]; then
    n=2441
  fi
  sudo tee /sys/class/backlight/intel_backlight/brightness <<< "$n"
}

function butler-init() {
  python3 -m venv env
  . ./env/bin/activate
